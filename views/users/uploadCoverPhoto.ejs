<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
    />
    <!-- CSS -->
    <link rel="stylesheet" href="/css/uploadPhoto.css" />
    <title>Upload Cover Photo</title>
    <link rel="icon" href="/images/sd.png" type="image/png" />
  </head>
  <body>
     <!-- Preloader  -->

     <div class="preloader"></div>
    <%-include("../partials/navbar.ejs") %>
    <div class="form-container">
      <!-- icon -->
      <h1>Upload Cover photo</h1>
      <p>
        <!-- upload icon -->
      </p>
      <% if(error) {%>
      <small class="error">
        <i class="fas fa-exclamation-circle"></i>
        <!-- Invalid Credentials -->
        <%=error %>
      </small>
      <% } %>
      <form action="/api/v1/users/cover-photo-upload" method="POST" enctype="multipart/form-data">
        <label for="email">Select Image</label>
        <input type="file" name="coverImage" />
        <button type="submit">
          <i class="fas fa-upload"></i>
        </button>
      </form>
    </div>
    <%-include("../partials/footer.ejs") %>
    <script src="/js/loader.js"></script>
  </body>
</html>
